{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Python: Setup Environment",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/setup_python_env.sh",
      "args": ["--mode", "local"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Full Setup & Test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Python: Setup Environment",
        "Python: Install Dependencies",
        "Python: Run Tests"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Python: Quality Check",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Python: Lint with Pylint",
        "Python: Type Check with MyPy",
        "Python: Format Code"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Python: Install Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pip",
      "args": ["install", "-r", "requirements.txt"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Run Tests",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pytest",
      "args": ["tests/", "-v", "--cov=src", "--cov-report=html"],
      "options": {
        "cwd": "${workspaceFolder}/python",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Lint with Pylint",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pylint",
      "args": ["src/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Type Check with MyPy",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/mypy",
      "args": ["src/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Start Jupyter Lab",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/jupyter",
      "args": [
        "lab",
        "--notebook-dir=${workspaceFolder}/notebooks",
        "--ip=0.0.0.0"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Format Code",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/black",
      "args": ["src/", "tests/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "TypeScript: Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "TypeScript: Test",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "TypeScript: Test Watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Start Codex",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/codex_start.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Stop Codex",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/codex_stop.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Full Project Setup",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Python: Setup Environment",
        "Python: Install Dependencies",
        "TypeScript: Build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Web: Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Web: Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
