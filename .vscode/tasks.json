{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Get Current Date/Time",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/get_current_datetime.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Setup Environment",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/setup_python_env.sh",
      "args": ["--mode", "local"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Full Setup & Test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Python: Setup Environment",
        "Python: Install Dependencies",
        "Python: Run Tests"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Python: Quality Check",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Python: Lint with Pylint",
        "Python: Type Check with MyPy",
        "Python: Format Code"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Python: Install Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pip",
      "args": ["install", "-r", "requirements.txt"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Run Tests",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pytest",
      "args": ["tests/", "-v", "--cov=src", "--cov-report=html"],
      "options": {
        "cwd": "${workspaceFolder}/python",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "pytest",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "pytest",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):\\s+(FAILED|ERROR)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          },
          {
            "regexp": "^\\s+(.*)$",
            "message": 1,
            "loop": true
          }
        ]
      }
    },
    {
      "label": "Python: Lint with Pylint",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/pylint",
      "args": ["src/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "pylint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "pylint",
        "severity": "warning",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(\\w+):\\s+(.*)\\s+\\((.*)\\)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        }
      }
    },
    {
      "label": "Python: Type Check with MyPy",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/mypy",
      "args": ["src/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "mypy",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "mypy",
        "pattern": {
          "regexp": "^(.*):(\\d+):\\s+(error|warning|note):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      }
    },
    {
      "label": "Python: Start Jupyter Lab",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/jupyter",
      "args": [
        "lab",
        "--notebook-dir=${workspaceFolder}/notebooks",
        "--ip=0.0.0.0"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Format Code",
      "type": "shell",
      "command": "${workspaceFolder}/python/.venv/bin/black",
      "args": ["src/", "tests/"],
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "TypeScript: Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    // --- TypeScript/Node.js SDK Playground Optimized Tasks ---
    {
      "label": "tsc: watch - tsconfig.json",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "-w", "-p", "tsconfig.json"],
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "TypeScript: Test",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "jest",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "jest",
        "pattern": [
          {
            "regexp": "^\\s*●\\s+(.*)$",
            "message": 1
          },
          {
            "regexp": "^\\s+at\\s+.*\\((.*):(\\d+):(\\d+)\\)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "label": "TypeScript: Test Watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "jest-watch",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "jest",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*Watch Usage.*$",
          "endsPattern": "^\\s*Test Suites:.*$"
        },
        "pattern": [
          {
            "regexp": "^\\s*●\\s+(.*)$",
            "message": 1
          },
          {
            "regexp": "^\\s+at\\s+.*\\((.*):(\\d+):(\\d+)\\)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "loop": true
          }
        ]
      }
    },
    {
      "label": "Docker: Start Codex",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/codex_start.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Stop Codex",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/codex_stop.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Web Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "web:dev"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "nextjs",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "Next.js",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*compiled.*$",
          "endsPattern": "^.*Local:.*http://localhost.*$"
        },
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          },
          {
            "regexp": "^.*Error:\\s+(.*)$",
            "message": 1
          }
        ]
      }
    },
    {
      "label": "Web: Lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "web:lint"],
      "group": "test",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Web: Format",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "web:format"],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": {
        "owner": "prettier",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "prettier",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    },
    {
      "label": "Web: Test",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "web:test"],
      "group": "test",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": {
        "owner": "vitest",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "vitest",
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(FAIL|ERROR)\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          },
          {
            "regexp": "^\\s*●\\s+(.*)$",
            "message": 1,
            "loop": true
          }
        ]
      }
    },
    {
      "label": "Web: Preview",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "web:preview"],
      "group": "build",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "isBackground": true,
      "problemMatcher": {
        "owner": "nextjs-preview",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "Next.js Preview",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*starting.*$",
          "endsPattern": "^.*ready.*http.*$"
        },
        "pattern": {
          "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Full Project Setup",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Python: Setup Environment",
        "Python: Install Dependencies",
        "TypeScript: Build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Web Development Environment",
      "dependsOrder": "sequence",
      "dependsOn": ["Start Web Dev Server"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*compiled.*$",
          "endsPattern": "^.*Local:.*http://localhost.*$"
        }
      }
    },
    {
      "label": "Web Quality Check",
      "dependsOrder": "parallel",
      "dependsOn": ["Web: Lint", "Web: Format", "Web: Test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Browser Error Monitor",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/browser-error-monitor.sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "browser-monitor",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "Browser Monitor",
        "pattern": {
          "regexp": "^ERROR\\s+(.*)\\s+at\\s+(.*):(\\d+):(\\d+)$",
          "message": 1,
          "file": 2,
          "line": 3,
          "column": 4
        }
      }
    },
    {
      "label": "Check Next.js Console Errors",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/browser-error-monitor.sh",
      "args": ["--console-only"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "console-errors",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "Browser Console",
        "pattern": {
          "regexp": "^CONSOLE\\s+(ERROR|WARN|INFO)\\s+(.*)\\s+at\\s+(.*):(\\d+):(\\d+)$",
          "severity": 1,
          "message": 2,
          "file": 3,
          "line": 4,
          "column": 5
        }
      }
    },
    {
      "label": "Lighthouse CI Analysis",
      "type": "shell",
      "command": "npx",
      "args": [
        "lighthouse",
        "http://localhost:3000",
        "--output=json",
        "--output-path=./lighthouse-report.json",
        "--chrome-flags=\"--headless\""
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "lighthouse",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "Lighthouse",
        "severity": "warning",
        "pattern": {
          "regexp": "^.*?(error|warning|info).*?:\\s+(.*)$",
          "severity": 1,
          "message": 2
        }
      }
    },
    {
      "label": "Webhint Analysis",
      "type": "shell",
      "command": "npx",
      "args": ["hint", "http://localhost:3000", "--format=json"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "webhint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "source": "webhint",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)\\s+(error|warning|hint)\\s+(.*)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        }
      }
    },
    {
      "label": "Complete Browser Error Check",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Browser Error Monitor",
        "Check Next.js Console Errors",
        "Webhint Analysis"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Development Quality Suite",
      "dependsOrder": "parallel",
      "dependsOn": ["Web Quality Check", "Complete Browser Error Check"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Make Scripts Executable",
      "type": "shell",
      "command": "chmod",
      "args": ["+x", "${workspaceFolder}/scripts/*.sh"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "tsc: build - tsconfig.json",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "-p", "tsconfig.json"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Run SDK Playground (main.ts)",
      "type": "shell",
      "command": "node",
      "args": ["./lib/src/main.js"],
      "group": "test",
      "dependsOn": ["tsc: build - tsconfig.json"],
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Open SDK Playground (main.ts)",
      "type": "shell",
      "command": "code",
      "args": ["${workspaceFolder}/src/main.ts"],
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
    // --- End TypeScript/Node.js SDK Playground Optimized Tasks ---
  ]
}
