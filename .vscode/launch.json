{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/python/.env",
      "cwd": "${workspaceFolder}/python",
      "python": "${workspaceFolder}/python/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
      }
    },
    {
      "name": "Python: Main Module",
      "type": "debugpy",
      "request": "launch",
      "module": "vigilant_codex",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/python/.env",
      "cwd": "${workspaceFolder}/python",
      "python": "${workspaceFolder}/python/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
      }
    },
    {
      "name": "Python: Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/python/.env",
      "cwd": "${workspaceFolder}/python",
      "python": "${workspaceFolder}/python/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
      }
    },
    {
      "name": "Python: FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "vigilant_codex.api.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/python/.env",
      "cwd": "${workspaceFolder}/python",
      "python": "${workspaceFolder}/python/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/python/src:${workspaceFolder}/python"
      }
    },
    {
      "name": "TypeScript: Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal"
    },
    {
      "name": "TypeScript: Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["run", "--reporter=verbose"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Node.js: Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Docker: Debug in Container",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/workspace"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Python: FastAPI Server",
        "TypeScript: Debug Current File"
      ],
      "stopAll": true
    },
    {
      "name": "Debug Tests (All)",
      "configurations": ["Python: Tests", "TypeScript: Debug Tests"],
      "stopAll": true
    }
  ]
}
